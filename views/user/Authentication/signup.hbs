<body>
<main>
  <div class="container-fluid m-5 p-3 gap-2">
      <div class="row d-flex flex-column align-items-center justify-contents-center" style="width: 100%;">     
        <div class="col-sm-6 login-section-wrapper">
        <div class="login-wrapper my-auto">           
          <h1 class="login-title" style="color: #6A9739; ">My Account</h1>
          <h3 class="login-subtile">Register</h3>
          {{#if error}}
          <div class="alert alert-danger" role="alert">
            {{error}}
          </div>
          {{/if}}
          {{#if success}}
          <div class="alert alert-success" role="alert">
            {{success}}
          </div>
          {{/if}}
                  <form action="/signup" method="post" id="signup_form">
                      <div class="form-group mb-4">
                        <label for="userName"><b>User Name</b> </label>
                          <input type="text" name="userName" id="userName" class="form-control" placeholder="User Name" >
                          <span id="username_error" style="color: red;"></span>
                          </div>
                      <div class="form-group mb-4">
                      <label for="email"><b>Email Address</b></label>
                      <input type="email" name="email" id="email" class="form-control" placeholder="email@example.com" >
                      <span id="email_error"  style="color: red;"></span>
                      </div>
                      <div class="form-group mb-4">
                        <label for="password"><b>Password</b></label>
                        <input type="password" name="password" id="password" class="form-control" placeholder="Enter your passsword" >
                        <span id="password_error"  style="color: red;"></span>
                        </div>
                        <div class="form-group mb-4">
                        <label for="confirmpassword"><b>Confirm Password</b></label>
                        <input type="password" name="conformpassword" id="conformpassword" class="form-control" placeholder="Re-enter your passsword" >
                        <span id="conformpassword_error"  style="color: red;"></span>
                        </div>
                        <div class="form-group mb-4">
                        <label for="phoneNumber"><b>Phone Number</b></label>
                        <input type="text" name="phoneNumber" id="phoneNumber" class="form-control" placeholder="Enter your phone Number" >
                        <span id="phonenumber_error"  style="color: red;"></span>
                        </div>
                        <span id="form_error" style="color: red;" ></span>
                      <button type="submit" name="register" class="btn btn-primary p-3" style="width: 100%; background-color: #6A9739;">Register</button>

                    </form>
                    <div class="d-flex flex-row align-items-center justify-content-between">
            <div>
                        <div class="input-group mb-3 p-3 d-flex flex-row align-items-center  gap-2">                     
                      <input class="form-check-input mt-0 p-2"  name="remember-me-check" type="checkbox" value="">                     
                      <label class="rememberme p-2" for="rememberme">Remember Me</label>
                  </div>
              <div>
                <p class="login-wrapper-footer-text">Already Have an Account?
                <a class="login-wrapper-footer-text signup" style="color: #6A9739; " href="/login" class="text-reset">Login</a></p>
            </div>   
          </div>
          
        </div>
       </div>      
            </div>
        </div>
      </div>
  </main>
</body>

<script src="/javascripts/signup.js"></script>


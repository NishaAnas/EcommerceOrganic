<body>
    <div class="container">
        <h1 class="mt-5 mb-3">Shop</h1>
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a
                            href="/">Home</a></li>
                    <li class="breadcrumb-item active">{{Category.name}}</li>
                </ol>
            </nav>
        </div>
        <div class="row">
            {{#each products}}
            <div class="col-xs-1 col-sm-2 col-md-3 col-lg-4 mb-5">
                        <div class="card mt-5 pd-5" style="width: 18rem; height: 30rem;">
                            <img src="/{{this.images.[0]}}" class="card-img-top img-fluid" style="width: 100%; height: 60%;" alt="{{title}}" >
                            <div class="card-body d-flex flex-column align-items-center justify-content-center">
                                <h5 class="card-title">{{title}}</h5>
                                <p class="card-text">Price: {{price}}</p>
                                <div class="d-flex flex-row align-items-center justify-content-between gap-4">
                                <a href="#" class="btn" style="background-color: #6A9739; color: white;">Add to cart</a>
                                <a href="/productDetails/{{this._id}}" class="btn" style="background-color: #6A9739; color: white;">Get Details</a>
                                </div>
                                
                            </div>
                        </div>
                    </div>
            {{/each}}
        </div>
    </div>
</body>
<link rel="stylesheet" href="/stylesheets/wishlist.css">
<body>
    {{!-- dispaly success and error message --}}
    {{#if error}}
    <div id="flash-message" class="alert alert-danger" role="alert">
        {{error}}
    </div>
    {{/if}}
    {{#if success}}
    <div id="flash-message" class="alert alert-success" role="alert">
        {{success}}
    </div>
    {{/if}}

    <div class="container py-5">
        <h1>My Wishlist</h1>
        <div class="row">
            {{!-- dispaly each wishlist items as card --}}
            {{#each wishlist}}
            <div class="col-md-4">
                <div class="profile-card-2">
                    <img src="/{{this.images.[0]}}" class="img img-responsive">
                    <div class="profile-name">{{attributeValue}}</div>
                    <div class="profile-username">Buy At: ${{totalPrice}}</div>
                    <div class="profileicons">
                        <form action="/addToCartWishlist" method="POST" class="d-inline">
                            <input type="hidden" name="variantId" value="{{this._id}}">
                            {{#if (gt this.stock 0)}}
                            <button type="submit" class="btn btn-success"><i class="bi bi-cart"></i> </button>
                            {{else}}
                            <button type="button" class="btn btn-secondary" disabled><i class="bi bi-cart-x-fill"></i> </button>
                            {{/if}}
                        </form>
                        <button type="button" class="btn btn-danger remove-button" data-variantid="{{this._id}}">
                            <i class="bi bi-trash"></i> 
                        </button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
        <script src="/javascripts/wishlist.js"></script>
    </body>

<link rel="stylesheet" href="/stylesheets/wallet.css">
<body>
    <div class="container">
        <h1>Wallet</h1>
        <div class="wallet-balance">
            <h2>Balance: ₹<span id="balance">{{balance}}</span></h2>
        </div>
        <div class="add-money">
            <h2>Add Money</h2>
            <input type="number" id="amount" placeholder="Enter amount">
            <button id="add-money-button">Add Money</button>
        </div>
        <div class="wallet-transactions">
            <h2>Transactions</h2>
            <table>
                <thead>
                    <tr>
                        <th>Amount</th>
                        <th>Date</th>
                        <th>Type</th>
                        <th>Reason</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each walletDetails}}
                    <tr>
                        <td>₹{{amount}}</td>
                        <td class="order-date">{{date}}</td>
                        <td>{{type}}</td>
                        <td>{{reason}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <div class="pagination-container d-flex flex-row align-items-center justify-content-between m-4" style="background-color: aliceblue;">
                <div class="pagination-summary text-primary">
                    Page {{ currentPage }} of {{ totalPages }}
                </div>
                <div class="pagination-links d-flex flex-row align-items-center justify-content-between gap-3">
                    {{#if (gt currentPage 1)}}
                    <a href="/wallet?page={{ subtract currentPage 1 }}" class="pagination-link text-primary">Previous</a>
                    {{/if}}
                    {{#if (lt currentPage totalPages)}}
                    <a href="/wallet?page={{ add currentPage 1 }}" class="pagination-link text-primary">Next</a>
                    {{/if}}
                </div>
            </div>
    </div>
    <script src="/javascripts/wallet.js"></script>
    
</body>
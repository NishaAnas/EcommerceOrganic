<link rel="stylesheet" href="/stylesheets/productlisting.css">

<main>
    {{#if error}}
            <div id="flash-message" class="alert alert-danger" role="alert">
            {{error}}
            </div>
            {{/if}}
            {{#if success}}
            <div id="flash-message" class="alert alert-success" role="alert">
            {{success}}
            </div>
            {{/if}}
    <div class="container m-3 d-flex flex-column  p-3">
        <div class="d-flex align-itmes-center justify-content-between">
            <div class="search">
                <input type="text" class="search-input" placeholder="search..." name="">
                <a href="#" class="search-icon">
                    <i class="bi bi-search"></i>
                </a>
            </div>
            <div class="dropdown sort-dropdown" >
                <button class="btn  dropdown-toggle dropdown-btn" style="background-color: #6A9739;" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Sort By
                </button>
                <ul class="dropdown-menu list-dropdown item-dropdown">
                    <li><a class="dropdown-item" href="#">Aa-Zz</a></li>
                    <li><a class="dropdown-item" href="#">Zz-Aa</a></li>
                    <li><a class="dropdown-item" href="#">price low-high</a></li>
                    <li><a class="dropdown-item" href="#">price high-low</a></li>
                </ul>
            </div>
        </div>
    </div>

        <div class="container py-5">
        <h4 class="text-center">
            <strong>Shop For</strong>
        </h4>
        <div class="row">
            {{#each productList}}
	            <div class="col-md-4">
                    <hr>
                        <a  class="prod_card" href="/productDetails/{{this._id}}" class="product-link">
                            <div class="profile-card-2"><img src="/{{this.images.[0]}}" alt="{{attributeName}}" loading="lazy" class="img img-responsive">
                                <div class="profile-name">
                                    {{attributeValue}}
                                </div>
                                <div class="profile-username">
                                     Buy At: {{price}}
                                </div>
                            </div>
                        </a>
                </div>
            {{/each}}
        </div>
    </div>
    </div>
    
</main>






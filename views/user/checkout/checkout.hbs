<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<main>
    <div class="container mt-5">
        <h1 class="mb-4">Checkout</h1>
        <form id="checkoutForm">
            <div class="container d-flex flex-row ">
                <div class="container d-flex flex-column ">
                    
                    <!-- Address Section -->
                    <div class="card mb-4 position-relative">
                        <div class="card-header">
                            <h2 class="h5 d-inline">Shipping Address</h2>
                            <a href="/addressManagement"
                                class="btn btn-secondary btn-sm position-absolute"
                                style="top: 10px; right: 10px;">
                                <i class="bi bi-pencil"></i> Change
                            </a>
                        </div>
                        <div class="card-body">
                            <p><b>Select Address</b></p>
                                {{#if addressRecords}}
                                    {{#each addressRecords}}
                                        <div class="form-check mb-3">
                                            <input class="form-check-input" type="radio" name="address" value="{{_id}}" id="address-{{_id}}"
                                            {{#if ../defaultAddress}}{{#if (isEqual _id ../defaultAddress._id)}}checked{{/if}}{{/if}}>
                                            <label class="form-check-label" for="address-{{_id}}">
                                                </b>{{name}} ,<br><b>Area :</b> {{area}} , <b>Street :</b> {{street}} , <b>City :</b> {{city}} ,<br>
                                                <b>State :</b> {{state}} , <b>Country :</b> {{country}} ,<br>
                                                <b>pincode :</b> {{pincode}}</p>
                                            </label>
                                        </div>
                                    {{/each}}
                                    <input type="hidden" name="selectedAddressId" id="selectedAddressId" value="{{#if defaultAddress}}{{defaultAddress._id}}{{/if}}">
                                {{else}}
                                    <p>No addresses found.</p>
                                {{/if}}
                            </div>
                        </div>

                    <!-- Delivery Options Section -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h2 class="h5">Delivery Options</h2>
                        </div>
                        <div class="card-body">
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="radio"
                                    name="deliveryOption" value="express"
                                    id="delivery-fastest" checked>
                                <label
                                    class="form-check-label d-flex justify-content-between align-items-center w-100"
                                    for="delivery-fastest">
                                    <span>
                                        Express Delivery
                                        <small
                                            class="d-block text-primary">Delivered
                                            within 3 hours</small>
                                    </span>
                                    <span class="text-muted">₹100</span>
                                </label>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="radio"
                                    name="deliveryOption" value="standard"
                                    id="delivery-normal">
                                <label
                                    class="form-check-label d-flex justify-content-between align-items-center w-100"
                                    for="delivery-normal">
                                    <span>
                                        Standard Delivery
                                        <small
                                            class="d-block text-primary">Delivered
                                            within 12 hrs</small>
                                    </span>
                                    <span class="text-muted">₹40</span>
                                </label>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="radio"
                                    name="deliveryOption" value="normal"
                                    id="delivery-other">
                                <label
                                    class="form-check-label d-flex justify-content-between align-items-center w-100"
                                    for="delivery-other">
                                    <span>
                                        Normal Delivery
                                        <small
                                            class="d-block text-primary">Delivered
                                            within 24 hrs (based on Available
                                            slots <br> Express/
                                            Standard)</small>
                                    </span>
                                    <span class="text-muted">₹60</span>
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- Payment Details Section -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h2 class="h5">Payment Details</h2>
                        </div>
                        <div class="card-body">
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="radio"
                                    name="paymentOption" value="razorpay"
                                    id="payment-razorpay">
                                <label class="form-check-label"
                                    for="payment-razorpay">
                                    Razorpay
                                </label>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="radio"
                                    name="paymentOption" value="wallet"
                                    id="payment-wallet">
                                <label class="form-check-label"
                                    for="payment-wallet">
                                    Wallet
                                </label>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="radio"
                                    name="paymentOption" value="cod"
                                    id="payment-cod">
                                <label class="form-check-label"
                                    for="payment-cod">
                                    Cash on Delivery
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="container d-flex flex-column">
                    <!-- Cart Summary Section -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h2 class="h5">Cart Summary</h2>
                        </div>
                        <div class="card-body">
                            <ul id="cart-summary" class="list-group mb-3">
                                {{#each cartitems}}
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <img src="{{productImage}}" alt="{{productName}}" class="img-sm mr-3"
                                            style="width: 20%;">
                                        <div class="p-1 small">
                                            <h6 class="my-0">{{productName}}</h6>
                                            <small class="text-muted">{{category}} - {{baseProduct}}</small>
                                            <br>
                                            <small class="text-muted">Base Price: ₹{{actualPrice}}</small>
                                            <br>
                                            <small class="text-muted">Quantity: {{quantity}}</small>
                                        </div>
                                    </div>
                                    <span class="text-muted">₹{{totalPrice}}</span>
                                </li>
                                {{/each}}

                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <b>Total Products:</b>
                                    </div>
                                    <div>
                                        <span id="total-quantity">{{totalQuantity}}</span>
                                    </div>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <b>Total Price:</b>
                                    </div>
                                    <div>
                                        ₹<span id="total-price">{{totalPriceOfAllProducts}}</span>
                                    </div>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <b>Discount: ( {{couponName}}  )</b>
                                    </div>
                                    <div>
                                        -₹<span id="discount">{{discountAmount}}</span>
                                    </div>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <b>After Discount:</b>
                                    </div>
                                    <div>
                                        ₹<span id="after-discount">{{afterDiscountTotal}}</span>
                                    </div>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <b>Delivery Price:</b>
                                    </div>
                                    <div>
                                        +₹<span id="delivery-price"></span>
                                    </div>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <hr>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <b>Grand Total:</b>
                                    </div>
                                    <div>
                                        ₹<span id="grand-total"></span>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="container">
                        <button type="submit" form="checkoutForm"
                            id="place-order" class="btn btn-primary btn-block">Place Order</button>
                    </div>
                </div>

            </div>
        </form>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="/javascripts/checkout.js"></script>

    </main>
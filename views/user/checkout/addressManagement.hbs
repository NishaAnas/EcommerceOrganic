<style>

.container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
}

h1, h2 {
    text-align: center;
}

.order-summary, .order-items {
    margin-bottom: 30px;
}

.order-info {
    background-color: #f5f5f5;
    padding: 20px;
    border-radius: 5px;
}

.row {
    margin-bottom: 10px;
    display: flex;
    justify-content: space-between;
}

.item {
    display: flex;
    margin-bottom: 20px;
}

.item-image {
    width: 100px;
    margin-right: 20px;
}

.item-image img {
    width: 100%;
    border-radius: 5px;
}

.item-details {
    flex-grow: 1;
}

.item-name {
    font-weight: bold;
    margin-bottom: 5px;
}

.item-price {
    font-size: 18px;
}

.item-quantity {
    color: #666;
}
</style>

<body>
    <div class="container">
        <h1>Order Details</h1>
        <div class="order-summary">
            <h2>Order Summary</h2>
            <div class="order-info">
                <div class="row">
                    <div class="col">Order Number:</div>
                    <div class="col">123456789</div>
                </div>
                <div class="row">
                    <div class="col">Order Date:</div>
                    <div class="col">May 17, 2024</div>
                </div>
                <div class="row">
                    <div class="col">Total Amount:</div>
                    <div class="col">₹500.00</div>
                </div>
                <div class="row">
                    <div class="col">Payment Method:</div>
                    <div class="col">Credit Card</div>
                </div>
            </div>
        </div>
        <div class="order-items">
            <h2>Order Items</h2>
            <div class="item">
                <div class="item-image">
                    <img src="product1.jpg" alt="Product Image">
                </div>
                <div class="item-details">
                    <div class="item-name">Product Name</div>
                    <div class="item-price">₹100.00</div>
                    <div class="item-quantity">Quantity: 2</div>
                </div>
            </div>
            <div class="item">
                <div class="item-image">
                    <img src="product2.jpg" alt="Product Image">
                </div>
                <div class="item-details">
                    <div class="item-name">Product Name</div>
                    <div class="item-price">₹200.00</div>
                    <div class="item-quantity">Quantity: 1</div>
                </div>
            </div>
        </div>
        <div class="action-buttons">
            <button class="btn cancel-order">Cancel Order</button>
            <button class="btn check-delivery">Check Delivery Status</button>
        </div>
    </div>
</body>
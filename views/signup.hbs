<body>
<main>
  <div class="container-fluid m-5 p-3 gap-2">
      <div class="row d-flex flex-column align-items-center justify-contents-center" style="width: 100%;">     
        <div class="col-sm-6 login-section-wrapper">
        <div class="login-wrapper my-auto">           
          <h1 class="login-title">My Account</h1>
          <h2 class="login-subtile">Register</h2>
          {{#if error}}
          <div class="alert alert-danger" role="alert">
            {{error}}
          </div>
          {{/if}}
          {{#if success}}
          <div class="alert alert-success" role="alert">
            {{success}}
          </div>
          {{/if}}
                  <form action="/signup" method="post">
                  <div class="form-group mb-4 d-flex flex-column" >
                      <label for="firstName">First Name </label>
                      <input type="text" name="firstName" id="firstName" class="form-control"   placeholder="First Name" required>
                      </div>
                        <div class="form-group mb-4 d-flex flex-column  ">
                          
                        <label for="lastName">Last Name </label>
                        <input type="text" name="lastName" id="lastName" class="form-control"  placeholder="Last Name" required>
                      </div>
                      <div class="form-group mb-4">
                        <label for="userName">User Name </label>
                          <input type="text" name="userName" id="userName" class="form-control" placeholder="User Name" required>
                          </div>
                       <div class="form-group mb-4">
                      <label for="email">Email Address</label>
                      <input type="email" name="email" id="email" class="form-control" placeholder="email@example.com" required>
                      </div>
                       <div class="form-group mb-4">
                        <label for="password">Password</label>
                        <input type="password" name="password" id="password" class="form-control" placeholder="Enter your passsword" required>
                        </div>
                        <div class="form-group mb-4">
                        <label for="confirmpassword">Confirm Password</label>
                        <input type="password" name="conformpassword" id="conformpassword" class="form-control" placeholder="Re-enter your passsword" required>
                        </div>
                        <div class="form-group mb-4">
                        <label for="phoneNumber">Phone Number</label>
                        <input type="text" name="phoneNumber" id="phoneNumber" class="form-control" placeholder="Enter your phone Number" required>
                        </div>
                      <button type="submit" name="register" class="btn btn-primary p-3" style="width: 100%; background-color: #6A9739;" onclick="return validateForm(event)">Register</button>

                    </form>
                    <div class="d-flex flex-row align-items-center justify-content-between">
            <div>
                         <div class="input-group mb-3 p-3 d-flex flex-row align-items-center  gap-2">                     
                      <input class="form-check-input mt-0 p-2"  name="remember-me-check" type="checkbox" value="">                     
                      <label class="rememberme p-2" for="rememberme">Remember Me</label>
                  </div>
              <div>
                <p class="login-wrapper-footer-text">Already Have an Account?
                <a class="login-wrapper-footer-text signup" style="color: #6A9739; " href="/login" class="text-reset">Login</a></p>
            </div>   
          </div>
          <div class="d-flex flex-column align-items-center justify-contents-flex-end">
            <label for="signup with"> SignUp With!!!!</label>
            <div class="d-flex flex-row align-items-center justify-contents-flex-end gap-3">
                <button type="button" name="google" class="btn btn-outline-primary btn-block" style="background-color: #DD4B39;"><i class="bi bi-google"></i></button>
                 <button type="button" name="google" class="btn btn-outline-primary btn-block" style="background-color:#3B5998;"><i class="bi bi-facebook"></i></button>
            </div>
          </div>
        </div>
       </div>      
            </div>
        </div>
      </div>
  </main>
</body>

<script src="/javascripts/signup.js"></script>


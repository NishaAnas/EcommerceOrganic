<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<body>
    <div class="container mt-5">
        <h2>Product Management <small>Organic</small></h2>
        <!-- Display success and error message -->
        {{#if error}}
        <div class="alert alert-danger">
            {{error}}
        </div>
        {{/if}}
        {{#if success}}
        <div class="alert alert-success">
            {{success}}
        </div>
        {{/if}}
        <div class="d-flex justify-content-end mb-3">
            <!-- Add Product Button -->
            <a href="/admin/addProduct" class="btn btn-sm btn-success">+ Add Product</a>
        </div>
        <!-- Table for dispalying product details -->
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th>Product SKU</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Images</th>
                        <th>Active</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each Product}}
                    <tr>
                        <td>{{this.sku}}</td>
                        <td>{{this.name}}</td>
                        <td>{{this.categoryName}}</td>
                        <td>{{this.price}}</td>
                        <td><img src="/{{this.images.[0]}}" alt="Product Image" class="img-fluid" style="width: 50px; height: 50px;"></td>
                        <td>
                            <span class="{{#if this.isActive}}text-success{{else}}text-danger{{/if}}">
                                {{#if this.isActive}}Active{{else}}Deactive{{/if}}
                            </span>
                        </td>
                        <td class="d-flex justify-content-start">
                            <a href="/admin/editProduct/{{this._id}}" class="btn btn-sm btn-primary mr-2">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <form action="/admin/deleteProduct/{{this._id}}?_method=PUT" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <!-- Pagination Section -->
        <div class="pagination-container d-flex flex-row align-items-center justify-content-between m-4" style="background-color: aliceblue;">
            <div class="pagination-summary text-primary">
                Page {{ currentPage }} of {{ totalPages }}
            </div>
            <div class="pagination-links d-flex flex-row align-items-center justify-content-between gap-3">
                {{#if (gt currentPage 1)}}
                <a href="/admin/product?page={{ subtract currentPage 1 }}" class="pagination-link text-primary">Previous</a>
                {{/if}}
                {{#if (lt currentPage totalPages)}}
                <a href="/admin/product?page={{ add currentPage 1 }}" class="pagination-link text-primary">Next</a>
                {{/if}}
            </div>
        </div>
    </div>
    <!-- Custom javascript page -->
    <script src="/javascripts/product.js"></script>
</body>

<body>
    <body>

        <div class="container-fluid">
            <h1>Variation Management</h1>

            <div
                class="d-flex flex-row align-items-baseline justify-content-around">
                <!-- Search Form -->
                <form class="form-inline my-4 d-flex flex-row gap-2">
                    <input class="form-control mr-sm-2" type="search"
                        placeholder="Search" aria-label="Search">
                    <button class="btn my-2 my-sm-0"
                        type="submit" style=" background-color: #6A9739; color: white;">Search</button>
                </form>

                <!-- Add Category Button -->
                <button type="button" class="btn mb-4" style=" background-color: #6A9739; color: white;"
                    data-toggle="modal" data-target="#addCategoryModal">Add New
                    Variation</button>
            </div>

            <h2>List of Variations</h2>

            <table class=".table-striped">
                <thead>
                    <tr>
                        <th scope="col">Product Name</th>
                        <th scope="col">Variation Attributes</th>
                        <th scope="col">Price</th>
                        <th scope="col">Stock</th>
                        <th scope="col">Active</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each variations}}
                    <tr>
                        <td>{{_id}} -
                            {{_id}}</td>
                        <td>
                            {{#each attributes}}
                            <span class="badge bg-secondary">{{name}}:
                                {{value}}</span>
                            {{/each}}
                        </td>
                        <td>{{price}}</td>
                        <td>{{stock}}</td>
                        <td>{{isActive ? "Yes" : "No"}}</td>
                        <td>
                            <button class="btn btn-sm btn-info view-btn"
                                data-variation-id="{{_id}}">View</button>
                            <button class="btn btn-sm btn-warning update-btn"
                                data-variation-id="{{_id}}">Update</button>
                            <button class="btn btn-sm btn-danger delete-btn"
                                data-variation-id="{{_id}}">Delete</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </body>

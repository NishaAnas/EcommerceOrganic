<div
    class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Editing: {{ categoryDetailsViewing.name }}</h1>
    {{#if error}}
<div class="alert alert-danger" role="alert">
    {{error}}
</div>
{{/if}}
{{#if success}}
<div class="alert alert-success" role="alert">
    {{success}}
</div>
{{/if}}
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button class="btn btn-sm btn-outline-secondary">?</button>
        </div>
    </div>
</div>

<div class="col py-3">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a
                            href="/admin/category">Category Management</a></li>
                    <li class="breadcrumb-item active">{{categoryDetailsViewing.name}}</li>
                </ol>
            </nav>
        </div>
        <div class="col text-end fw-lighter">
            <b>Product ID:</b> {{ categoryDetailsViewing._id }}
        </div>
    </div>
</div>
<form action="/admin/editCategory/{{categoryDetailsViewing._id}}?_method=PUT" method="POST">
    <div class="row form-group mb-4 p-3 gap-4">
        <div class="col">
            <label for="categoryName"><b>Category Name</b></label>
            <input type="text" class="form-control" id="categoryName"
                name="categoryName"
                value="{{categoryDetailsViewing.name }}"
                placeholder="Category Name" required>
        </div>
        <div class="row form-group">
            <div class="col">
                <label for="categoryDetails"><b>Category Details</b></label>
                <input type="text" class="form-control" id="categoryDetails"
                    name="categoryDetails"
                    value="{{categoryDetailsViewing.description }}"
                    placeholder="category Details" required>
            </div>
        </div>
        <div class="d-flex flex-row align-items-center justify-content-evenly">
        <div class="row form-group">
            <div class="col">
                <label for="isActive"><b>isActive</b></label>
                <input type="text" class="form-control" id="isActive"
                    name="isActive"
                    value="{{categoryDetailsViewing.isActive}}"
                    placeholder="isActive" required>
            </div>
        </div>
        <div class="row form-group">
            <div class="col">
                <label for="isDeleted"><b>isDeleted</b></label>
                <input type="text" class="form-control" id="isDeleted"
                    name="isDeleted"
                    value="{{categoryDetailsViewing.isDeleted }}"
                    placeholder="isDeleted" required>
            </div>
        </div>
        </div>
        <div class="form-group mb-4 d-flex flex-row align-items-center justify-content-evenly">
            <button type="submit" class="btn btn-primary">Update Product</button>
            <button type="button" class="btn btn-danger" data-bs-toggle="modal"
                id="deleteButton" data-bs-target="#deleteModal">Delete Product</button>
        </div>
    </form>
    {{!-- //Deleting Data from the database --}}
    <div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="modal-title">You are about to remove a Category
                        record.</div>
                    <button type="button" class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>
                        This will remove the product record of <b class="fw-bold">{{categoryDetailsViewing.name }}</b><br />
                        Are you sure?
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary"data-bs-dismiss="modal">Close</button>
                    <form action="/admin/deleteCategory/{{categoryDetailsViewing._id}}?_method=PUT" method="POST"class="position-relative">
                    <button type="submit" class="btn btn-primary">Yes, Remove Category</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
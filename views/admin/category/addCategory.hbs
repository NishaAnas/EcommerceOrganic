<link rel="stylesheet" href="/stylesheets/addcategory.css">
<body>
<div class="container">
    <h1 class="text-center mb-4">Add New Category</h1>
    <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin/category">category Management</a></li>
          <li class="breadcrumb-item active">Add Category</li>
        </ol>
      </nav>
    </div>
  </div>
      {{#if error}}
          <div class="alert alert-danger">
            {{error}}
          </div>
          {{/if}}  
          {{#if success}}
          <div class="alert alert-success">
            {{success}}
          </div>
          {{/if}} 
          <form action="/admin/addcategory" method="post" id="addCategoryForm">
      <div class="row mb-4">
        <label for="category-name" class="col-sm-2 col-form-label">Category Name:</label>
        <div class="col-sm-10">
            <input type="text" id="category-name" name="name" class="form-control" >
            <span id="categoryname_error" style="color: red;"></span>
        </div>
    </div>
    <div class="row mb-4">
        <label for="category-description" class="col-sm-2 col-form-label">Description:</label>
        <div class="col-sm-10">
            <textarea id="category-description" name="description" cols="20" rows="6" class="form-control" placeholder="Category Details" ></textarea>
            <span id="description_error" style="color: red;"></span>
        </div>
    </div>
    
    <div class="row mb-4">
        <div class="col-sm-2 offset-sm-2 ">
          <div class="form-check form-switch d-flex flex-row align-items-center justify-content-center gap-3" style="width: 100%;">
          <input class="form-check-input"  type="checkbox" role="switch" id="flexSwitchCheckDefault" style="min-height: 70%;">
          <label class="form-check-label" id="toggle-active" for="flexSwitchCheckDefault">Active</label>
          </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10 offset-sm-2">
          <span id="form_error" style="color: red;" ></span>
            <button type="submit" name="addCategory" class="btn btn-primary p-3" style="width: 100%; background-color: #6A9739;">Add Category</button>
        </div>
    </div>
  </form>
  </div>
</body>
<script src="/javascripts/addCategoryscript.js"></script>

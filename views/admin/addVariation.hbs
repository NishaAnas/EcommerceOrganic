<body>
<h1>Add New Variation</h1>

<form id="add-variation-form">
    <div class="row mb-3">
        <label for="product-select"
            class="col-sm-2 col-form-label">Product:</label>
    </div>
    <div class="col-sm-10 d-flex flex-row gap-5">
        <div class="col-sm-6">
            <label for="variation-name" class="col-form-label">Name:</label>
            <input id="variation-name" name="variationName" class="form-select"
                required>
            </input>
        </div>
        <div class="col-sm-6">
            <label for="variation-value" class="col-form-label">Value:</label>
            <input id="variation-value" name="variationValue"
                class="form-select" required>
            </input>
        </div>
    </div>

    <div class="d-flex flex-row gap-5">
        <div class="sm-6">
            <label for="variation-price" class="form-label">Price:</label>
            <input type="number" id="variation-price" name="price"
                class="form-control">
        </div>

        <div class="sm-6">
            <label for="variation-stock" class="form-label">Stock:</label>
            <input type="number" id="variation-stock" name="stock"
                class="form-control">
        </div>
    </div>

    <div class="form-check mb-3 d-flex flex-row justify-content-around p-5">
        <div>
            <input type="checkbox" id="category-active" name="isActive"
                class="form-check-input">
            <label for="category-active" class="form-check-label">Active</label>
        </div>
        <button type="submit" class="btn btn-primary"
            style=" background-color: #6A9739;">Add Variation</button>
    </div>
</form>
<!-- Modal for displaying variation details -->
<div class="modal fade" id="variationDetailsModal" tabindex="-1" role="dialog"
    aria-labelledby="variationDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"
                    id="variationDetailsModalLabel">Variation Details</h5>
            </div>
            <div class="modal-body" id="variationDetails">
                <!-- Variation details will be displayed here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary"
                    id="variationDetailsModalClose">Close</button>
                <button type="button" id="executeDatabaseCodeVariation"
                    style=" background-color: #6A9739;"
                    class="btn btn-primary">Save to Database</button>
            </div>
        </div>
    </div>
</div>  
</body>
<script src="/javascripts/addVariation.js"></script>

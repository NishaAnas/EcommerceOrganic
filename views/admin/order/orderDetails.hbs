<!-- Bootstrap CSS for styling -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<!-- Custom stylesheet for additional styling -->
<link rel="stylesheet" href="/stylesheets/adminorderDetails.css">
</head>
<body>
    <!-- Container for the order details content -->
    <div class="container mt-5">
        <h2>Order Details <small class="text-muted">Order ID: {{orderDetails.newOrderId}}</small></h2>
    <!-- Order information section -->    
    <div class="order-info">
    <div class="row">
        <div class="col-md-4"><strong>User:</strong></div>
        <div class="col-md-8">{{orderDetails.userId.userName}}</div>
    </div>
</div>
<div class="order-info">
    <div class="row">
        <div class="col-md-4"><strong>Order Date:</strong></div>
        <div class="col-md-8"><span class="order-date">{{orderDetails.orderDate}}</span></div>
    </div>
</div>
<div class="order-info">
    <div class="row">
        <div class="col-md-4"><strong>Status:</strong></div>
        <div class="col-md-8">{{orderDetails.orderStatus}}</div>
    </div>
</div>
<div class="order-info">
    <div class="row">
        <div class="col-md-4"><strong>Coupon Code (Amount):</strong></div>
        <div class="col-md-8">{{orderDetails.couponCode}} ({{orderDetails.discountAmount}})</div>
    </div>
</div>
<div class="order-info">
    <div class="row">
        <div class="col-md-4"><strong>Delivery Method (Amount):</strong></div>
        <div class="col-md-8">{{orderDetails.delivery.method}} ({{deliveryCharge}})</div>
    </div>
</div>
<div class="order-info">
    <div class="row">
        <div class="col-md-4"><strong>Total Amount:</strong></div>
        <div class="col-md-8">Rs. {{orderDetails.totalAmount}}</div>
    </div>
</div>
<div class="order-info">
    <div class="row">
        <div class="col-md-4"><strong>Address:</strong></div>
        <div class="col-md-8">{{orderDetails.address.street}}, {{orderDetails.address.city}}, {{orderDetails.address.state}}, {{orderDetails.address.zip}}</div>
    </div>
</div>
        <h3 class="mt-4">Items:</h3>
        <ul class="order-items">
            <div class="table-responsive" style="font-size: 75%;">
            <table class="table table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th>Product Name</th>
                        <th>Quantity</th>
                        <th>Price/unit</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each orderDetails.items}}
                    <tr>
                        <td>{{this.productId.attributeValue}}</td>
                        <td>{{this.quantity}}</td>
                        <td>Rs. {{this.price}}</td>
        </tr>
    {{/each}}
    </tbody>
</table>
        <a href="/admin/ordermanage" class="btn btn-primary mt-3">Back to Orders</a>
    </div>
    <!-- JavaScript file for order management functionality -->
    <script src="/javascripts/orderManagement.js"></script>
    </body>
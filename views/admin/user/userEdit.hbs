<link rel="stylesheet" href="/stylesheets/edituser.css">
<body>
    <div class="container">
        <div
            class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Editing: {{ userDetailsViewing.userName }}</h1>
            {{#if error}}
            <div class="alert alert-danger">
                {{error}}
            </div>
            {{/if}}
            {{#if success}}
            <div class="alert alert-success">
                {{success}}
            </div>
            {{/if}}
            <div class="btn-toolbar mb-2 mb-md-0">
                <div class="btn-group me-2">
                    <button class="btn btn-sm btn-outline-secondary">?</button>
                </div>
            </div>
        </div>
        <div class="col py-3">
            <div class="row">
                <div class="col">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a
                                    href="/admin/user">User
                                    Management</a></li>
                            <li
                                class="breadcrumb-item active">{{userDetailsViewing.userName}}</li>
                        </ol>
                    </nav>
                </div>
                <div class="col text-end fw-lighter">
                    <b>User ID:</b> {{userDetailsViewing._id }}
                </div>
            </div>
        </div>
        <form
            action="/admin/editUser/{{userDetailsViewing._id}}?_method=PUT"
            method="POST" >
                <div class="row form-group mb-4 p-3 gap-4">
                    <div class="col">
                        <label for="userName"><b>User Name</b></label>
                        <input type="text" class="form-control"
                            id="userName"
                            name="userName"
                            value="{{userDetailsViewing.userName }}"
                            placeholder="userName" disabled>
                    </div>
                    <div class="row form-group mb-4 p-3 gap-4">
                        <div class="col">
                            <label for="emailid"><b>Email Id</b></label>
                            <input type="text" class="form-control"
                                id="emailId"
                                name="emailId"
                                value="{{userDetailsViewing.email }}"
                                placeholder="Email Id" disabled>
                        </div>
                        
                        <div class="row form-group mb-4 p-3 gap-4">
                        <div class="col">
                            <label for="phonenumber"><b>Email Id</b></label>
                            <input type="text" class="form-control"
                                id="phonenumber"
                                name="phonenumber"
                                value="{{userDetailsViewing.phoneNumber }}"
                                placeholder="Phone Number" disabled>
                        </div>
                            <div
                                class="d-flex flex-row align-items-center justify-content-evenly">
                                <div class="row form-group">
                                    <div class="col">
                                        <label for="isActive"
                                            class="col-sm-2 col-form-check-label">isActive:</label>
                                        <div
                                            class="col-sm-10 form-check form-switch"
                                            style="padding-left: 4.5em;">
                                            <input class="form-check-input"
                                                name="isActive" type="checkbox"
                                                role="switch" id="isActive"
                                                {{#if userDetailsViewing.isActive}}checked{{/if}}
                                                style="min-height: 70%;" disabled>
                                        </div>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col">
                                        <label for="isDeleted"
                                            class="col-sm-2 col-form-check-label">isBlocked:</label>
                                        <div
                                            class="col-sm-10 form-check form-switch"
                                            style="padding-left: 4.5em;">
                                            <input class="form-check-input"
                                                name="isDeleted" type="checkbox"
                                                role="switch" id="isBlocked"
                                                {{#if userDetailsViewing.isBlocked }}checked{{/if}}
                                                style="min-height: 70%;">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mb-4 d-flex flex-row align-items-center justify-content-evenly">
                                <button type="submit"class="btn btn-primary">Update Product</button>
                            </div>
                        </form>
                    </div>
                </body>
                
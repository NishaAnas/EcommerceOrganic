<div
    class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Editing: {{ userDetailsViewing.firstName }}</h1>
    {{#if error}}
<div class="alert alert-danger" role="alert">
    {{error}}
</div>
{{/if}}
{{#if success}}
<div class="alert alert-success" role="alert">
    {{success}}
</div>
{{/if}}
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button class="btn btn-sm btn-outline-secondary">?</button>
        </div>
    </div>
</div>

<div class="col py-3">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a
                            href="/admin/user">User Management</a></li>
                    <li class="breadcrumb-item active">{{userDetailsViewing.firstName}}</li>
                </ol>
            </nav>
        </div>
        <div class="col text-end fw-lighter">
            <b>Product ID:</b> {{ userDetailsViewing._id }}
        </div>
    </div>
</div>
<form action="/admin/editUser/{{userDetailsViewing._id}}?_method=PUT" method="POST">
    <div class="row form-group mb-4 p-3 gap-4">
        <div class="col">
            <label for="firstName"><b>first Name</b></label>
            <input type="text" class="form-control" id="firstName"
                            name="firstName"
                value="{{userDetailsViewing.firstName }}"
                placeholder="first Name" disabled>
        </div>
        <div class="row form-group">
            <div class="col">
                <label for="lastName"><b>last Name</b></label>
                <input type="text" class="form-control" id="lastName"
                    name="lastName"
                    value="{{userDetailsViewing.lastName }}"
                    placeholder="last Name" disabled>
            </div>
        </div>
        <div class="row form-group">
            <div class="col">
                <label for="userName"><b>user Name</b></label>
                <input type="text" class="form-control" id="userName"
                    name="userName"
                    value="{{userDetailsViewing.userName }}"
                    placeholder="user Name" disabled>
            </div>
        </div>
        <div class="row form-group">
            <div class="col">
                <label for="email"><b>email</b></label>
                <input type="text" class="form-control" id="email"
                    name="email"
                    value="{{userDetailsViewing.email }}"
                    placeholder="email" disabled>
            </div>
        </div>
        <div class="row form-group">
            <div class="col">
                <label for="phoneNumber"><b>phoneNumber</b></label>
                <input type="text" class="form-control" id="phoneNumber"
                    name="phoneNumber"
                    value="{{userDetailsViewing.phoneNumber }}"
                    placeholder="phoneNumber" disabled>
            </div>
        </div>
        <div class="d-flex flex-row align-items-center justify-content-evenly">
        <div class="row form-group">
            <div class="col">
                <label for="isActive"><b>isActive</b></label>
                <input type="text" class="form-control" id="isActive"
                    name="isActive"
                    value="{{userDetailsViewing.isActive}}"
                    placeholder="isActive" disabled>
            </div>
        </div>
        <div class="row form-group">
            <div class="col">
                <label for="isBlocked"><b>isBlocked</b></label>
                <input type="text" class="form-control" id="isBlocked"
                    name="isBlocked"
                    value="{{userDetailsViewing.isBlocked }}"
                    placeholder="isBlocked" required>
            </div>
        </div>
        </div>
        <div class="form-group mb-4 d-flex flex-row align-items-center justify-content-evenly">
            <button type="submit" class="btn btn-primary">Update User</button>
        </div>
    </form>
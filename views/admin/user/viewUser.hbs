<div
  class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">{{userDetailsViewing.name}}</h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <button type="button"
        class="btn btn-sm btn-outline-secondary">Share</button>
      <button type="button"
        class="btn btn-sm btn-outline-secondary">Export</button>
    </div>
  </div>
</div>

<div class="col py-3">

  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin/user">User
              Management</a></li>
          <li
            class="breadcrumb-item active">{{userDetailsViewing.firstName}}</li>
        </ol>
      </nav>
    </div>
  </div>

</div>
{{#if error}}
<div class="alert alert-danger" role="alert">
  {{error}}
</div>
{{/if}}
{{#if success}}
<div class="alert alert-success" role="alert">
  {{success}}
</div>
{{/if}}

<ul class="list-group">

  <li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 140px"> <b>First Name:</b></div>
      <div class="col">{{userDetailsViewing.firstName}}</div>
    </div>
  </li>

  <li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 140px"> <b>Last Name:</b></div>
      <div class="col">{{userDetailsViewing.lastName}}</div>
    </div>
  </li>

<li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 140px"> <b>User Name:</b></div>
      <div class="col">{{userDetailsViewing.userName}}</div>
    </div>
  </li>

  <li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 140px"> <b>Email:</b></div>
      <div class="col">{{userDetailsViewing.email}}</div>
    </div>
  </li>

  <li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 140px"> <b>Phone Number:</b></div>
      <div class="col">{{userDetailsViewing.phoneNumber}}</div>
    </div>
  </li>
  <li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 140px"> <b>isActive</b></div>
      <div class="col">{{userDetailsViewing.isActive}}</div>
    </div>
  </li>

  <li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 140px"> <b>isBlocked</b></div>
      <div class="col">{{userDetailsViewing.isBlocked}}</div>
    </div>
  </li>
</ul>